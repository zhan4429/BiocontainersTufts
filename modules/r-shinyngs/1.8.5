module-whatis   "Description: Shinyngs is an R package designed to facilitate downstream analysis of RNA-seq and similar expression data with various exploratory plots and data mining tools."
module-whatis   "Home page:   https://github.com/pinin4fjords/shinyngs"
module-whatis "Commands: rserver,R,Rscript"

set pkg r-shinyngs 
set ver 1.8.5

proc ModulesHelp { } {
  puts stderr "\tThis module adds r-shinyngs v1.8.5 to the environment.  It runs as a container under singularity"
}

#
# prepend-path and set SINGULARITY_BIND
#
prepend-path PATH            /cluster/tufts/biocontainers/tools/r-shinyngs/1.8.5/bin
prepend-path --delim=, SINGULARITY_BIND /cluster/tufts

#
# set environment variable
#


#
# list conflict modules that cannot be loaded together
#
set conflicts_modules {r R R-bioconductor r-rnaseq r-rstudio r-shinyngs rstudio Rstudio}
foreach a_conflict $conflicts_modules {
  conflict $a_conflict
}

#
# appended log section
# 

if {[module-info mode "load"]} {
  global env
  if {[info exists env(USER)]} {
    set the_user [lindex [array get env USER] 1]
  } else {
    set the_user "foo"
  }
  system [concat "logger environment-modules" [module-info name] $the_user ]
}

set additional_prereqs {"singularity"}
if {[module-info mode "load"]} {
  foreach a_module $additional_prereqs {
    if {![is-loaded $a_module]} {
      module load $a_module
    }
  }
}
